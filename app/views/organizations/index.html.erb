<h2>Organizations</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>Phone</th>
    <th>Email</th>
	<th># Fundraisers</th>
  </tr>
<% for organization in @organizations %>
  <tr>
    <td><%=h organization.name %></td>
    <td><%=h organization.contact %></td>
    <td><%=h organization.phone %></td>
    <td><%=h organization.email %></td>
    <td><%= organization.fundraisers.size %></td>	
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', organization, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

